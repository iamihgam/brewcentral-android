<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iotdesignshop.brewcentral.FlowFragment"
    android:background="@color/desiredColor">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="120dp">

            <TextView
                android:text="Set Point"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_weight="1"
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:textAlignment="center"
                android:id="@+id/flow_title" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flow_value"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:textSize="30sp" />

            <TextView
                android:text="gal/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flow_units"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_marginTop="-2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="120dp">

            <TextView
                android:text="Current"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/textView6"
                android:textColor="?android:attr/textColorPrimaryInverse" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_value"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:textSize="30sp" />

            <TextView
                android:text="gal/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_units"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:layout_marginTop="-2dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/imageView"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/expand_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.29"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless" />

</android.support.constraint.ConstraintLayout>
